# =============================================================================
# Resource Capital - Data Pipeline Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# =============================================================================

# Supabase Database Connection (REQUIRED)
# Get this from: Supabase Dashboard > Settings > Database > Connection string
# Use the "URI" format, should look like:
# postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Optional: Supabase API (for direct API calls)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-service-role-key-here

# =============================================================================
# AI/ML APIs (for document extraction)
# =============================================================================

# Groq API (fast LLM inference for PDF extraction)
# GROQ_API_KEY=gsk_...

# Anthropic API (for earnings extraction)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Database Configuration
# =============================================================================

# Connection pooling
DB_POOL_MIN_CONN=1
DB_POOL_MAX_CONN=5

# Query logging
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD_MS=500

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable JSON structured logging (for production)
STRUCTURED_LOGGING=false

# =============================================================================
# News & Data APIs
# =============================================================================

# Finnhub (market data and news)
# FINNHUB_API_KEY=...

# NewsAPI (news aggregation)
# NEWSAPI_KEY=...

# =============================================================================
# FUTURE: Licensed Data Providers (replace yfinance)
# =============================================================================

# Polygon.io (Stock Data)
# POLYGON_API_KEY=your-polygon-api-key

# Metals-API (Commodity Prices)
# METALS_API_KEY=your-metals-api-key

# Alpha Vantage (Alternative stock data)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
